{
  "git": {
    "commitMessage": "chore(release): version ${version}",
    "tagName": "v${version}",
    "requireCleanWorkingDir": false
  },
  "github": {
    "release": true
  },
  "npm": {
    "publish": false,
    "publishPath": "./",
    "publishArgs": ["--access=public"]
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": "conventionalcommits",
      "infile": "CHANGELOG.md",
      "header": "# Changelog"
    }
  }
}
